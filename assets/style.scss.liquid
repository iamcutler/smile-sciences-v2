/* =====================
   1. Presets
   ===================== */
@mixin vertical-gradient($top, $bottom) {
  background: #242424; /* Old browsers */
  background: -moz-linear-gradient(top,  $top 0%, $bottom 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,$top), color-stop(100%,$bottom)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top,  $top 0%,$bottom 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top,  $top 0%,$bottom 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top,  $top 0%,$bottom 100%); /* IE10+ */
  background: linear-gradient(to bottom,  $top 0%,$bottom 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='$top', endColorstr='$bottom',GradientType=0 ); /* IE6-9 */
}

@mixin transition($statement) {
  -webkit-transition: $statement;
     -moz-transition: $statement;
       -o-transition: $statement;
      -ms-transition: $statement;
          transition: $statement;
}

@mixin transform($statement) {
  -webkit-transform: $statement;
     -moz-transform: $statement;
       -o-transform: $statement;
      -ms-transform: $statement;
          transform: $statement;
}

/* =====================
   2. Base styles
   ===================== */

* {
  margin: 0;
  padding: 0;
}

html, body {
  background-color: $background-color;
  font-size: $base-font-size;
  line-height: 1.6;
  font-family: $base-font-family;
  color: $text-color;
  font-weight: $font-weight;
}

.clearfix {
  height: 0;
  clear: both;
}

/* Base button styling */
.btn {
  background: #464646;
  color: #FFF;
  font-size: 14px;
  text-transform: uppercase;
  text-decoration: none;
  padding: 10px 16px;
  @include transition(background 0.2s ease-in);
  
  &:hover {
    background: #2f2f2f;
  }
}

/* =====================
   3. Header
   ===================== */

header {
  &.main {
    border-bottom: 4px #0b99d6 solid;
  
    /* override main container elements */
    .main-container {
      position: relative;
      height: 152px;
    }
  
    a#logo:link,
    a#logo:visited {
      float: left;
      padding: 20px 0;
      display: block;
    }
  
    /* Shopping cart */
    #cart-wrapper {
      float: right;
      
      a:link, a:visited {
        color: $text-color;
        text-decoration: none;
        
        #cart-arrow {
          float: left;
          background-image: url({{ 'cart-arrow.png' | asset_url }});
          background-image: url({{ 'cart-arrow.svg' | asset_url }});
          background-repeat: no-repeat;
          width: 57px;
          height: 51px;
          display: block;
          
          #cart-icon {
            background-image: url({{ 'cart-icon.png' | asset_url }});
            background-image: url({{ 'cart-icon.svg' | asset_url }});
            background-repeat: no-repeat;
            width: 24px;
            height: 21px;
            display: block;
            margin: 15px 0 0 14px;
          }
        }
        
        #cart-amount {
          float: right;
          font-weight: bold;
          margin: 13px 0 0 12px;
        }
      }
    }
    
    /* Search */
    #search-wrapper {
      float: right;
      background: #252525;
      height: 51px;
      padding: 0 10px 0 0;
      margin-right: 8px;
      
      form {
        margin-top: 8px;
        
        input {
          outline: none;
        }
        
        input[type='search'] {
          background: #363636;
          padding: 8px;
          border: none;
        }
        
        input[type='submit'] {
          background-color: transparent;
          background-image: url({{ 'search-icon.png' | asset_url }});
          background-image: url({{ 'search-icon.svg' | asset_url }});
          background-repeat: no-repeat;
          background-position: center center;
          width: 15px;
          height: 20px;
          border: none;
          overflow: hidden;
          text-indent: -9999px;
          margin-right: 4px;
          padding: 0 16px 0 24px;
        }
      }
    }
  }
}

/* =====================
   3.1 Navigation
   ===================== */
   
nav.main {
  position: absolute;
  right: 20px;
  bottom: 0;
  padding-bottom: 6px;
  
  ul {
    li {
      list-style: none;
      display: inline-block;
      
      a:link, a:visited {
        color: #FFF;
        font-size: 18px;
        font-weight: $font-weight;
        text-decoration: none;
        padding: 12px 12px;
        
        &:hover {
          background: #0b99d6;
        }
      }
    }
  }
}

/* =====================
   4. Layout
   ===================== */
 
.main-container {
  max-width: 1200px;
  margin: auto;
  padding: 0 20px;
}

/* =====================
   5. Home
   ===================== */
section {
  &.browse-collections {
    background: #363636;
    padding: 20px 0;
    
    h3 {
      font-size: 24px;
      font-weight: $font-weight;
      margin-bottom: 14px;
    }
    
    /* Collections */
    ul.collections {
      white-space: nowrap;
      
      li {
        list-style: none;
        width: 50%;
        min-height: 160px;
        display: inline-block;
        
        &:nth-child(2) {
          background: #5d5d5d;
          width: 1px;
        }
        
        /* Collection image */
        figure {
          float: left;
          width: 50%;
          text-align: center;
          margin: 0;
        }
        
        .collection {
          float: right;
          width: 50%;
          
          h5 {
            color: #a6a6a6;
            font-size: 24px;
            font-weight: $font-weight;
          }
          
          p {
            white-space: normal;
            margin-bottom: 12px;
          }
          
          .btn.shop-collection {
            background: #252525;
            
            &:hover {
              background: #000;
            }
          }
        }
      }
    }
  }
}

/* =====================
   6. Footer
   ===================== */   
footer.main {
  @include vertical-gradient('#242424', '#000000');
  margin-top: 30px;
  
  .copyright {
    font-size: 12px;
  }
}
   