/* =====================
   8. Product
   ===================== */  
section {
  &#product {
    margin: 80px 0;
    
    /* Product photos */
    #product-photos {
      position: relative;
      float: left;
      width: 46%;
      height: 320px;
      text-align: center;
      
      .product-photo-container {
        overflow: hidden;
        
        ul {
          white-space: nowrap;
          
          li {
            width: 552px;
            list-style: none;
            display: inline-block;
          }
        }
        
        .product-arrow {
          position: absolute;
          top: 50%;
          background: url('{{ 'product-arrows.png' | asset_url }}') 0 0 no-repeat;
          width: 21px;
          height: 67px;
          overflow: hidden;
          display: block;
          text-indent: -9999px;
          cursor: pointer;
          margin-top: -34px;
          
          &:hover {
            background-position-y: -70px;
          }
          
          &.right {
            right: 0;
            background-position-x: -29px;
          }
          
          &.disabled {
            @include opacity(0.5);
            cursor: default;
            
            &:hover {
              background-position-y: 0;
            }
          }
        } 
      }
    }
    
    /* Product details */
    #product-details {
      float: right;
      color: #b5b5b5;
      width: 46%;
      
      h1 {
        color: #0396d5;
        font-size: $section-header-font-size;
        font-weight: $font-weight;
        border-bottom: 1px #7d7d7d solid;
        padding-bottom: 4px;
        margin: 0;
      }
      
      #product-variants {
        background: #252525;
        padding: 10px;
