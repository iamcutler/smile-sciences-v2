/* Products */
ul.collection-grid {
  li {
    float: left;
    background: #000;
    width: 288px;
    height: 476px;
    list-style: none;
    border: 4px #555 solid;
    padding: 0;
    margin: 0 5px 5px 0;
    @include transition(all 0.2s ease-in);
    
    &:nth-child(4n) {
      margin-right: 0;
    }
    
    .product-image-wrap {
      width: 250px;
      height: 246px;
      overflow: hidden;
      text-align: center;
      padding: 20px;
      
      img {
        max-width: 100%;
        max-height: 246px;
      }
    }
    
    .product-caption {
      @include vertical-gradient(#000000, #242424);
      padding: 0 20px 20px 20px;
      
      span {
        &.product-title {
          color: #0396d5;
          font-size: 22px;
        }
        
        &.product-price {
          color: #FFF;
          font-size: 18px;
          font-weight: bold;
          text-align: center;
          display: block;
          margin: 10px 0;
        }
      }
      
      p {
        &.product-description {
          height: 44px;
          color: #b5b5b5;
          font-size: 14px;
        }
      }
      
      .btn.view-product {
