/* =====================
   1. Base styles
   ===================== */

* {
  margin: 0;
  padding: 0;
}

html, body {
  background-color: $background-color;
  font-size: $base-font-size;
  line-height: 1.6;
  font-family: $base-font-family;
  color: $text-color;
}

.clearfix {
  height: 0;
  clear: both;
}

/* =====================
   2. Header
   ===================== */

header {
  &.main {
    border-bottom: 4px #0b99d6 solid;
  
    /* override main container elements */
    .main-container {
      position: relative;
      height: 152px;
    }
  
    a#logo:link,
    a#logo:visited {
      float: left;
      padding: 20px 0;
      display: block;
    }
  
    /* Shopping cart */
    #cart-wrapper {
      float: right;
      
      a:link, a:visited {
        color: $text-color;
        text-decoration: none;
        
        #cart-arrow {
          float: left;
          background-image: url({{ 'cart-arrow.png' | asset_url }});
          background-image: url({{ 'cart-arrow.svg' | asset_url }});
          background-repeat: no-repeat;
          width: 57px;
          height: 51px;
          display: block;
          
          #cart-icon {
            background-image: url({{ 'cart-icon.png' | asset_url }});
            background-image: url({{ 'cart-icon.svg' | asset_url }});
            background-repeat: no-repeat;
            width: 24px;
            height: 21px;
            display: block;
            margin: 15px 0 0 14px;
          }
        }
        
        #cart-amount {
          float: right;
          font-weight: bold;
          margin: 13px 0 0 12px;
        }
      }
    }
    
    /* Search */
    #search-wrapper {
      float: right;
      background: #252525;
      height: 51px;
      padding: 0 10px 0 0;
      margin-right: 8px;
      
      form {
        margin-top: 8px;
        
        input {
          outline: none;
        }
        
        input[type='search'] {
          background: #363636;
          padding: 8px;
          border: none;
        }
        
        input[type='submit'] {
          background-color: transparent;
          background-image: url({{ 'search-icon.png' | asset_url }});
          background-image: url({{ 'search-icon.svg' | asset_url }});
          background-repeat: no-repeat;
          background-position: center center;
          width: 15px;
          height: 20px;
          border: none;
          overflow: hidden;
          text-indent: -9999px;
          margin-right: 4px;
          padding: 0 16px 0 24px;
        }
      }
    }
  }
}

/* =====================
   2.1 Navigation
   ===================== */
   
nav.main {
  position: absolute;
  right: 20px;
  bottom: 0;
  padding-bottom: 6px;
  
  ul {
    li {
      list-style: none;
      display: inline-block;
      
      a:link, a:visited {
        color: #FFF;
        font-size: 18px;
        font-weight: 300;
        text-decoration: none;
        padding: 12px 12px;
        
        &:hover {
          background: #0b99d6;
        }
      }
    }
  }
}

/* =====================
   3. Layout
   ===================== */
 
.main-container {
  max-width: 1200px;
  margin: auto;
  padding: 0 20px;
}