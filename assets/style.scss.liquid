    margin: 40px 0;
    
    h1 {
      color: #0396d5;
      font-weight: $font-weight;
      font-size: $section-header-font-size;
      line-height: 36px;
      margin: 0 0 30px 0;
    }
    
    p#collection-description {
      color: #cbcbcb;
      margin: -30px 0 30px 0;
    }
    
    .options {
      background: #252525;
      padding: 10px;
      margin-bottom: 12px;
    }
    
    p#no-products {
      font-size: 32px;
      color: #0396d5;
      text-align: center;
      margin: 60px 0;
    }
  }
