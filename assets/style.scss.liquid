/* =====================
   2. Base styles
   ===================== */

* {
  margin: 0;
  padding: 0;
}

html, body {
  background-color: $background-color;
  font-size: $base-font-size;
  line-height: 1.6;
  font-family: $base-font-family;
  color: $text-color;
  font-weight: $font-weight;
}

h1, h2, h3, h4, h5, h6 {
  &.page-title {
    color: #0396d5;
    font-size: $section-header-font-size;
    font-weight: $font-weight;
    margin-bottom: 20px;
  }
}

.clearfix {
  height: 0;
  clear: both;
}

a:link, a:visited {
  color: $link-color;
  text-decoration: none;
}

/* Base button styling */
.btn {
  background: #464646;
  color: #FFF;
  font-size: 14px;
  text-align: center;
  text-transform: uppercase;
  text-decoration: none;
  border: none;
  padding: 10px 16px;
  @include transition(background 0.2s ease-in);
  
  &:hover {
    background: #2f2f2f;
  }
  
  &.add-to-cart {
    background: #0b99d6 url('{{ 'add-cart-btn.png' | asset_url }}') center center no-repeat;
    background: #0b99d6 url('{{ 'add-cart-btn.svg' | asset_url }}') center center no-repeat;
    text-indent: -9999px;
    padding: 16px 40px;
    overflow: hidden;
  }
}

/* Page banners */
.page-banner {
  @include vertical-gradient(#000000, #242424);
  height: 210px;
  text-align: center;
  overflow: hidden;
  
  #learning-solutions {
    position: absolute;
    top: 140px;
    right: 170px;
    color: #6f6f6f;
    
    a:link, a:visited {
      color: #FFF;
      text-decoration: none;
      font-weight: 500;
      font-size: 18px;
      
      &:hover {
        text-decoration: underline;
      }
    }
  }
}

/* =====================
   3. Header
   ===================== */

header {
  &.main {
    border-bottom: 4px #0b99d6 solid;
  
    /* override main container elements */
    .main-container {
      position: relative;
      height: 152px;
    }
  
    a#logo:link,
    a#logo:visited {
      position: absolute;
      top: 24px;
      left: 20px;
      display: block;
    }
  
    /* Shopping cart */
    #cart-wrapper {
      float: right;
      
      a:link, a:visited {
        color: $text-color;
        text-decoration: none;
        
        #cart-arrow {
          float: left;
          background-image: url({{ 'cart-arrow.png' | asset_url }});
          background-image: url({{ 'cart-arrow.svg' | asset_url }});
          background-repeat: no-repeat;
          width: 57px;
          height: 51px;
          display: block;
          
          #cart-icon {
            background-image: url({{ 'cart-icon.png' | asset_url }});
            background-image: url({{ 'cart-icon.svg' | asset_url }});
            background-repeat: no-repeat;
            width: 24px;
            height: 21px;
            display: block;
            margin: 15px 0 0 14px;
          }
        }
        
        #cart-amount {
          float: right;
          font-weight: bold;
          margin: 13px 0 0 12px;
        }
      }
    }
    
    /* Search */
    #search-wrapper {
      float: right;
      background: #252525;
      height: 51px;
      padding: 0 10px 0 0;
      margin-right: 8px;
      
      form {
        margin-top: 8px;
        
        input {
          outline: none;
        }
        
        input[type='search'] {
          background: #363636;
          padding: 8px;
          border: none;
        }
        
        input[type='submit'] {
          background-color: transparent;
          background-image: url({{ 'search-icon.png' | asset_url }});
          background-image: url({{ 'search-icon.svg' | asset_url }});
          background-repeat: no-repeat;
          background-position: center center;
          width: 15px;
          height: 20px;
          border: none;
          overflow: hidden;
          text-indent: -9999px;
          margin-right: 4px;
          padding: 0 16px 0 24px;
        }
      }
    }
  }
}

/* =====================
   3.1 Navigation
   ===================== */
   
nav.main {
  position: absolute;
  right: 20px;
  bottom: 0;
  padding-bottom: 6px;
  
  ul {
    li {
      list-style: none;
      display: inline-block;
      
      a:link, a:visited {
        color: #FFF;
        font-size: 18px;
        font-weight: $font-weight;
        text-decoration: none;
        padding: 12px 12px;
        
        &:hover {
          background: #0b99d6;
        }
      }
    }
  }
}

/* Sub navigation */
ul.sub-navigation {
  background: #0b99d6;
  text-align: center;
  padding: 6px 0 4px 0;
  display: none;
  
  li {
    list-style: none;
    display: inline-block;
    padding: 0 10px;
    
    a:link, a:visited {
      color: #FFF;
      @include transition(color 0.2s ease-in);
      
      &:hover {
        color: #000;
      }
    }
  }
}

/* =====================
   3.2 Mobile navigation
   ===================== */
nav.mobile-navigation {
  background: #0b99d6;
  display: none;
  
  .mobile-btn {
    position: relative;
    float: left;
    width: 22px;
    height: 12px;
    padding: 14px;
    margin-left: 10px;
    cursor: pointer;
    
    i.bar {
      background: #FFF;
      width: 22px;
      height: 3px;
      display: block;
      @include transition(all 0.2s linear);
      @include transform(rotate(0deg));
      
      &:nth-last-child(1) {
        @include transform(rotate(0deg));
        margin-top: 6px;
      }
    }
    
    &.active {
      i.bar {
        position: absolute;
      
        &:nth-child(1) {
          top: 20px;
          @include transform(rotate(45deg));
        }
        
        &:nth-last-child(1) {
          top: 14px;
          @include transform(rotate(-45deg));
        }
      }
    }
  }
  
  ul {
    display: none;
    
    li {
      list-style: none;
      
      a:link, a:visited {
        width: 100%;
        color: #FFF;
        text-align: center;
        display: block;
        padding: 6px 0;
      }
      
      ul.sub-nav {
        background: #363636;
        display: none;
      }
    }
  }
}

/* =====================
   4. Layout
   ===================== */
 
.main-container {
  max-width: 1200px;
  margin: auto;
  padding: 0 20px;
}

/* =====================
   5. Home
   ===================== */
section {
  /* carousel */
  &#carousel {
    #carousel-container {
      background: #CCC;
      height: 464px;
      overflow: hidden;
      white-space: nowrap;
      
      ul {
        position: relative;
        font-size: 0;
      
        li {
          list-style: none;
          width: 100%;
          height: 464px;
          display: inline-block;
          
          figure {
            margin: 0;
            
            img {
              min-height: 100%;
            }
          }
        }
      }
    }
    
    #carousel-navbar {
      @include vertical-gradient(#000000, #242424);
      height: $carousel-navbar-height;
      
      /* Product spotlight */
      a#product-spotlight:link,
      a#product-spotlight:visited {
        position: relative;
        float: left;
        width: 220px;
        text-align: center;
        padding-top: 76px;
        line-height: 24px;
        text-decoration: none;
        
        figure {
          position: absolute;
          top: -156px;
          background: #FFF;
          width: 200px;
          height: 200px;
          border: 10px #FFF solid;
          margin: 0;
          overflow: hidden;
          @include border-radius(50%);
          
          img {
            height: 200px;
            display: block;
            margin: auto;
          }
          
          #spotlight-overlay {
            position: absolute;
            top: 0;
            width: 96%;
            height: 96%;
            border: 4px #0396d5 solid;
            @include border-radius(100%);
            @include transition(background 0.3s ease-in);
            
            #spotlight-icon {
              background: url('{{ 'spotlight-icon.png' | asset_url }}') center center no-repeat;
              background: url('{{ 'spotlight-icon.svg' | asset_url }}') center center no-repeat;
              width: 100%;
              height: 100%;
              display: block;
              @include opacity(0);
              @include transition(opacity 0.3s ease-in);
            }
          }
        }
        
        span {
          width: 100%;
          display: block;
          
          &#spotlight-title {
            color: #b5b5b5;
            font-size: 20px;
          }
          
          &#spotlight-product {
            color: #0c9ad6;
            font-size: 16px;
            font-weight: bold;
          }
        }
        
        /* Spotlight hover */
        &:hover {
          #spotlight-overlay {
            background: rgba(3,150,213,0.7);
            
            #spotlight-icon {
              @include opacity(1);
            }
          }
        }
      }
      
      /* Carousel navigation */
      #carousel-navigation {
        height: $carousel-navbar-height;
        padding-left: 220px;
        
        .carousel-btn {
          background-color: #252525;
          width: 38px;
          height: $carousel-navbar-height;
          overflow: hidden;
          cursor: pointer;
          @include transition(background-position 0.2s ease-in-out);
          
          &.left {
            float: left;
            background: #252525 url('{{ 'carousel-buttons.png' | asset_url }}') 0 0 no-repeat;
            
            &:hover {
              background-position: 0 -136px;
            }
          }
          
          &.right {
            float: right;
            background: #252525 url('{{ 'carousel-buttons.png' | asset_url }}') -38px 0 no-repeat;
            
            &:hover {
              background-position: -38px -136px;
            }
          }
          
          &.unactive {
            @include opacity(0.5);
            cursor: default;
            
            &:hover {
              background-position-y: 0;
            }
          }
        }
        
        /* Carousel slides */
        #carousel-slides-container {
          height: $carousel-navbar-height;
          overflow: hidden;
          
          ul {
            white-space: nowrap;
            font-size: 0;
            
            li {
              width: 350px;
              height: $carousel-navbar-height;
              list-style: none;
              display: inline-block;
              border-right: 1px #464646 solid;
              cursor: pointer;
              white-space: normal;
              
              &:nth-last-child(1) {
                border-right: none;
              }
              
              .thumbnail {
                float: left;
                background: #000;
                width: 82px;
                height: 82px;
                margin: 24px 0 0 20px;
                overflow: hidden;
                text-align: center;
                border: 4px #FFF solid;
                @include border-radius(50%);
                white-space: nowrap;
                
                img {
                  height: 100%;
                  @include transform(scale(1.5));
                }
              }
              
              .preview-description {
                float: right;
                width: 200px;
                margin: 14px 20px 0 0;
                
                span {
                  &.title {
                    color: #c2c2c2;
                    font-size: 24px;
                    @include transition(color 0.4s ease-in);
                  }
                }
                
                p {
                  font-size: 14px;
                  @include transition(color 0.4s ease-in);
                }
              }
              
              &.active {
                &:before {
                  content: '';
                  position: absolute;
                  background: url('{{ 'carousel-nav-arrow.png' | asset_url }}') no-repeat;
                  width: 48px;
                  height: 26px;
                  display: block;
                  text-indent: -9999px;
                  margin: -26px 0 0 140px;
                }
                
                /* Active thumbnail */
                .thumbnail {
                  img {
                    @include transform(scale(1));
                  }
                }
                
                .preview-description {
                  span {
                    &.title {
                      color: #0396d5;
                    }
                  }
                  
                  p {
                    color: #b5b5b5;
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  
  /* Browse collections */
  &#browse-collections {
    background: #363636;
    padding: 20px 0;
    
    h3 {
      font-size: 24px;
      font-weight: $font-weight;
      margin-bottom: 14px;
    }
    
    /* Collections */
    ul.collections {
      white-space: nowrap;
      
      li {
        list-style: none;
        width: 50%;
        min-height: 160px;
        display: inline-block;
        
        &:nth-child(2) {
          background: #5d5d5d;
          width: 1px;
        }
        
        /* Collection image */
        figure {
          float: left;
          width: 50%;
          text-align: center;
          margin: 0;
        }
        
        .collection {
          float: right;
          width: 50%;
          
          h5 {
            color: #a6a6a6;
            font-size: 24px;
            font-weight: $font-weight;
          }
          
          p {
            white-space: normal;
            margin-bottom: 12px;
          }
          
          .btn.shop-collection {
            background: #252525;
            color: #FFF;
            
            &:hover {
              background: #000;
            }
          }
        }
      }
    }
  }
  
  /* Home content */
  &#home {
    margin: 40px 0;
    
    ul {
      margin-left: 20px;
      
      li {
        background: #FFF;
        width: 566px;
        height: 300px;
        list-style: none;
        display: inline-block;
        overflow: hidden;
        margin: 6px;
        
        img {
          width: 100%;
          min-height: 300px;
        }
      }
    }
  }
}

/* =====================
   6. Sub pages
   ===================== */   
section#page {
  margin: 40px 0;
  
  h1 {
    color: #0396d5;
    font-size: $section-header-font-size;
    font-weight: $font-weight;
    margin-bottom: 20px;
  }
}

/* =====================
   7. Collections
   ===================== */   
